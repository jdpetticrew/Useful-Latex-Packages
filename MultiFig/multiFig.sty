\ProvidesPackage{multiFig}
\RequirePackage{graphicx}
\RequirePackage{subcaption}

\newcommand{\sidebysideFigures}[6]{
    \begin{figure}
        \centering
        \begin{minipage}[b]{0.49\textwidth}
            \includegraphics[width=\textwidth]{#1}
            \subcaption{#2}
        \end{minipage}
        \hfill
        \begin{minipage}[b]{0.49\textwidth}
            \includegraphics[width=\textwidth]{#3}
            \subcaption{#4}
        \end{minipage}
        \caption{\protect\raggedright #5}
        \label{#6}
    \end{figure}
}

\newcommand{\sidebysidestandaloneFigures}[7]{
    \begin{figure}
        \centering
        \begin{minipage}[b]{0.49\textwidth}
            \standaloneFig{width=\textwidth}{#1}{#2}
            \subcaption{#3}
        \end{minipage}
        \hfill
        \begin{minipage}[b]{0.49\textwidth}
            \standaloneFig{width=\textwidth}{#4}
            \subcaption{#5}
        \end{minipage}
        \caption{\protect\raggedright #6}
        \label{#7}
    \end{figure}
}

\newcommand{\standaloneFig}[3]{
	\ifstandalone
	\includegraphics[#1]{#3}
	\else
	\includegraphics[#1]{./#2/#3}
	\fi
}
